<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find my_nav)/maps/rf_lab_mod.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- Transform -->
  <node pkg="tf" name="odom_broadcaster" type="static_transform_publisher" 
          args="0 0 0 0 0 0 odom base_footprint 100"/>

  <!-- AMCL -->
  <include file="$(find my_nav)/launch/amcl.launch"/>

  <!-- move_base -->
  <!--<include file="$(find my_nav)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>-->

  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find my_nav)/rviz/amcl.rviz"/>
  </group>

</launch>
